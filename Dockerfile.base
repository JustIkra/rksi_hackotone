# Base image with system dependencies (rebuild rarely)
# Build: docker build -f Dockerfile.base -t tsmuk-base:latest .
FROM python:3.11-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    libpango-1.0-0 \
    libpangocairo-1.0-0 \
    libgdk-pixbuf-2.0-0 \
    libffi-dev \
    libcairo2 \
    libgirepository1.0-dev \
    gir1.2-pango-1.0 \
    libgl1 \
    libglib2.0-0 \
    libreoffice-writer \
    && rm -rf /var/lib/apt/lists/*
