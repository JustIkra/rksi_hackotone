# Test environment configuration
# This file is loaded automatically by conftest.py when running tests

ENV=test
JWT_SECRET=test_secret_key_for_testing_only

# Database - use local PostgreSQL for tests
# Make sure to create role 'app' and database 'app':
#   psql -d template1 -c "CREATE ROLE app WITH LOGIN PASSWORD 'app';"
#   psql -d template1 -c "CREATE DATABASE app OWNER app;"
POSTGRES_DSN_TEST=postgresql+asyncpg://app:app@127.0.0.1:5432/app

# File storage - use temp directory
FILE_STORAGE_BASE=/tmp/test_storage

# Disable external services in tests
AI_RECOMMENDATIONS_ENABLED=0
AI_VISION_FALLBACK_ENABLED=0

# Redis (optional, tests use mocks by default)
REDIS_URL=redis://localhost:6379/1

# RabbitMQ (optional, tests use mocks by default)
RABBITMQ_URL=amqp://guest:guest@localhost:5672//
